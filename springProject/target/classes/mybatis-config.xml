<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
  <configuration>
  
  	<settings>
  		<setting name="jdbcTypeForNull" value="NULL"/>
  	</settings>
  	
  	<typeAliases>
  		<typeAlias type="com.kh.spring.member.model.vo.Member" alias="member" />
  		<typeAlias type="com.kh.spring.board.model.vo.Board" alias="board"/>
  		<typeAlias type="com.kh.spring.board.model.vo.Reply" alias="reply"/>
  	</typeAliases>
  	
  	<!--   	주의할점! 별칭 등록을 하기 위해서는 반드시 해당클래스가 존재해야함! -->
  
  	<mappers>
  		<mapper resource="/mapper/member-mapper.xml"/>
  		<mapper resource="/mapper/board-mapper.xml"/>
  	</mappers>
  
  	<!-- 주의할점! 매퍼 파일을 등록하기 위해서는 반드시 해당경로에 파일이 존재해야하고 namespace도 존재해야함 -->
  	
  	<!-- 
  		environments, dataSource 에 기술했던 DB 연결정보 
  	
  		서버켜짐과 동시에 읽혀지는 파일인 root-context.xml에 기술할 예정 -> Spring Bean
  	 -->
  </configuration>