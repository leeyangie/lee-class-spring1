<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kh.spring.notice.model.dao.NoticeMapper">

	<sql id ="selectNotice"
	
	>SELECT
			   NOTICE_NO noticeNo,
			   NOTICE_TITLE noticeTitle,
			   NOTICE_WRITER noticeWriter,
			   NOTICE_CONTENT noticeContent,
			   CREATE_DATE createDate
	   FROM
		  	   NOTICE
	</sql>
	<select id="findAll" resultType="notice">
		<include refid="selectNotice"></include>
		  
		 ORDER
		    BY
		   	   NOTICE_NO DESC
	
	
	</select>
	
	<select id="findById" resultType="notice" parameterType="_int">
	 	<include refid="selectNotice"></include>
		WHERE
			  NOTICE_NO = #{noticeNo}
	</select>
	
	<insert id="save" parameterType="notice">
		INSER
		 INTO
		 	  NOTICE
	   VALUES
	   		  (
	   		  SEQ_NNO.NEXTVAL,
	   		  #{noticeTitle},
	   		  #{noticeWriter},
	   		  #{noticeContent},
	   		  #{createDate}
	   		  )
	
	</insert>
	
	<delete id="delete" parameterType="_int">
	DELETE 
		   NOTICE
     WHERE
     	   NOITCE_NO = #{noticeNo}
	</delete>
</mapper>